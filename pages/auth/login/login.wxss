Page {
  background-color: #4A708B
}

.header-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
}

.appName {
  font-size: 20px;
  color: #ffffff;
  margin-top: 10rpx;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 55%;
  margin: 50px auto;
}

.input-wrapper {
  display: flex;
  padding-bottom: 2px;
  border-bottom: 4rpx solid #4169E1;
  margin-bottom: 40px;
}

.input-icon {
  width: 50rpx;
  height: 50rpx;
}

.input {
  margin-left: 8px;
  font-size: 16px;
  color: white;
}

.button {
  margin-top: 40px;
  background-color: #4169E1;
  color: white;
  font-size: 16px;
}