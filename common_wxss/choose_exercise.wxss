.title{
  padding: 30rpx;
  font-size: larger;
  color: blue;
  border-bottom: 1rpx solid rgba(161, 161, 161, 0.247);
}

.option-list{
  display: flex;
  flex-direction: column;
  height: 700rpx;
  padding: 30rpx;
}

.option-radio{
  display: flex;
  flex-direction: row;
  align-content: center;
  line-height: 65rpx;
  font-size: 35rpx;
  border-bottom: 1rpx solid rgba(161, 161, 161, 0.247);
}

.option-radio-unchecked{
  color: black;
  border-bottom: 1rpx solid rgba(161, 161, 161, 0.247);
}

.option-radio-checked{
  
  color: blue;
  border-bottom: 1rpx solid rgba(161, 161, 161, 0.247);
}

.btn-row{
  display: flex;
  flex-direction: row;
  /* 50 -> 150 */
  margin-top: 120rpx;
  justify-content: space-between;
  align-items: center;
}

.button-pre{
  width: 300rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-left:45rpx;
  border-color: blue;
  color:blue;
}

.button-next{
  width: 300rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-left:45rpx;
  background-color: blue;
  color: white;
}