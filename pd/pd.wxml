<view class="report-row">
    <text class='txt'>{{msg6}}</text>
    <view class="section">
        <picker bindchange="bindPickerChange1" value="{{index1}}" range="{{array1}}" name="嗅味类型">
            <view >
                <input style="text-align:right" placeholder="请选择" value="{{inputvalue1}}" disabled='true' />
            </view>
        </picker>
        <modal hidden="{{hiddenmodalput1}}" title="自定义" confirm-text="确定" cancel-text="取消" bindcancel="cancel1" bindconfirm="confirm1">
            <input placeholder="请输入内容" bindinput="voteTitle1" />
        </modal>
    </view>
</view>

